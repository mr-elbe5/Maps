<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <!--suppress ServletWithoutMappingInspection -->
        <servlet-name>initServlet</servlet-name>
        <servlet-class>de.elbe5.application.MapsInitServlet</servlet-class>
        <load-on-startup>10</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>map</servlet-name>
        <servlet-class>de.elbe5.map.MapServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tile</servlet-name>
        <servlet-class>de.elbe5.tile.TileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>de.elbe5.user.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>map</servlet-name>
        <url-pattern>/map/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tile</servlet-name>
        <url-pattern>/osm/*</url-pattern>
        <url-pattern>/carto/*</url-pattern>
        <url-pattern>/topo/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
